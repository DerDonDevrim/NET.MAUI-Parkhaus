<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ParkhausApp.Dashboard"
             BackgroundColor="{StaticResource Background}">
    <VerticalStackLayout Padding="20" Spacing="20">
        <Label Text="Ticket Details" Style="{StaticResource TitleLabel}"/>
        <Frame Style="{StaticResource TicketFrame}">
            <VerticalStackLayout Spacing="12">

                <Label x:Name="ticketNumberLabel"  Text="Ticket Nummer" Style="{StaticResource SubTitleLabel}"/>
                <Label Text="Parkdauer" Style="{StaticResource SubTitleLabel}"/>
                <Label x:Name="parkduration" Text="" Style="{StaticResource TitleLabel}"/>
                <Label x:Name="parkprice" Text="" Style="{StaticResource TitleLabel}"/>
                <Label x:Name="entryTimeLabel" Text="Eintritts Zeit" Style="{StaticResource TitleLabel}"/>
                <Label Text="Status" Style="{StaticResource SubTitleLabel}"/>
                <Label x:Name="isPaidLabel" Text="Bezahlt" Style="{StaticResource TitleLabel}"/>
            
            </VerticalStackLayout>
        </Frame>
        <Button Text="Bezahlen"
                Clicked="PayButton"/>
    </VerticalStackLayout>
</ContentPage>