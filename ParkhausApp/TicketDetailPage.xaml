<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ParkhausApp.TicketDetailPage"
             Title="TicketDetailPage">
    <VerticalStackLayout>
        <Label Text="Ticket Details"/>
        <Label x:Name="ticketNumberLabel"  Text="Ticket Nummer"/>
        <Label x:Name="entryTimeLabel" Text="Eintritts Zeit"/>
        <Label x:Name="isPaidLabel" Text="Status"/>
        <Button Text="Bezahlen"
                Clicked="PayButton"/>
    </VerticalStackLayout>
</ContentPage>